<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aviation.mapper.UserMapper">
    <select id="ulogin" resultType="Users" parameterType="java.util.Map">
        select * from users where username = #{username} and password = #{password}
    </select>
    <insert id="uregister" parameterType="com.aviation.entity.Users">
        insert into users (username,password,role) value (#{username},#{password},#{role})
    </insert>
    <select id="getAllUsers" resultType="Users" parameterType="java.util.Map">
        select * from users
    </select>
    <delete id="deleteUsers" parameterType="com.aviation.entity.Users">
        delete from users where uid = #{uid}
    </delete>
    <update id="updateUser" parameterType="com.aviation.entity.Users">
        update users set username = #{username},password = #{password}, role = #{role} where uid = #{uid}
    </update>
    <select id="getUsers" resultType="Users" parameterType="java.util.Map">
        select * from users where uid = #{uid}
    </select>
    <insert id="addUser" parameterType="com.aviation.entity.Users">
        insert into users (username,password,role) value (#{username},#{password},#{role})
    </insert>
</mapper>